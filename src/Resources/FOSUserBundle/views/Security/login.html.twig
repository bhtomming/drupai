<!DOCTYPE html>
<html lang="zh_CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}助派网络登录入口{% endblock %}</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
        <link rel="stylesheet" href="//at.alicdn.com/t/font_1332196_epx9lt9r91l.css">
        <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
</head>
<body>

{% block body %}
    {% trans_default_domain 'FOSUserBundle' %}
    <div class="container">
        <div class="row justify-content-md-center mt-5">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <h3 class="text-center">助派管理员登录</h3>
                        </div>
                        {% if error %}
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            {% if csrf_token %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            {% endif %}

                            <label for="username" class="form-label"></label>
                            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" autocomplete="username" placeholder="{{ 'security.login.username'|trans }}" />

                            <label for="password" class="form-label"></label>
                            <input type="password" id="password" class="form-control" name="_password" required="required" autocomplete="current-password" placeholder="{{ 'security.login.password'|trans }}"/>

                            <div class="my-3">
                                <div class="form-check form-check-inline">
                                    <input type="checkbox" id="remember_me" class="form-check" name="_remember_me" value="on" />
                                    <label for="remember_me" class="form-check-label">{{ 'security.login.remember_me'|trans }}</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <input type="submit" id="_submit" class="btn btn-block btn-primary" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}


</body>
</html>
