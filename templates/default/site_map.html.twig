{% extends 'base.html.twig' %}

{% block body %}
    <div class="container py-5" id="page-city-article">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">首页</a></li>
                <li class="breadcrumb-item active" aria-current="page">导航地图</li>
            </ol>
        </nav>

        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">按地区分类</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">按标签分类</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">按结构分类</a>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                <div class="card card-body">
                    <div class="container">
                        <div class="row">
                            {% for city_web in city_webs %}
                            <div class="col  my-2">
                                <a href="/city/{{ city_web.slug }}" class="btn btn-outline-info my-1" role="button" aria-pressed="true">{{ city_web.mainWord }}网站开发</a>
                            </div>
                            {% endfor %}
                            {% for city_app in city_apps %}
                                <div class="col  my-2">
                                    <a href="/city/{{ city_app.slug }}" class="btn btn-outline-info my-1" role="button" aria-pressed="true">{{ city_app.mainWord }}小程序开发</a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                <div class="card card-body">
                    <div class="container">
                        <div class="row">
                            {% for article in articles %}
                            <div class="col  my-1">
                                <a href="/article/{{ article.slug }}" class="btn btn-outline-info my-1" role="button" aria-pressed="true">{{ article.title }}</a>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
                <div class="card">
                    <div class="card-header">主页</div>
                    <div class="card-body">
                        <a href="{{ path('home') }}" class="btn btn-outline-info my-1" role="button" aria-pressed="true">网站制作</a>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">新闻动态</div>
                    <div class="card-body">
                        {% for article_new in articles|from_cate('动态') %}
                        <a href="{{ path('home') }}" class="btn btn-outline-info my-1" role="button" aria-pressed="true">网站制作</a>
                            {% else %}
                        {% endfor %}
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">客户案例</div>
                    <div class="card-body">
                        {% for article_case in articles|from_cate('案例') %}
                            <a href="/article/{{ article_case.slug }}" class="btn btn-outline-info my-1" role="button" aria-pressed="true">{{ article_case.title }}</a>
                            {% else %}
                        {% endfor %}
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">联系我们</div>
                    <div class="card-body">
                        <a href="{{ path('contact') }}" class="nav-link">联系我们</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}