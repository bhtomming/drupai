<div class="card">
    <div class="card-header">相关内容</div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            {% for article in articles|slice(0,10) %}
                <li class="list-group-item"><a href="{{ path('article_show',{'slug': article.slug }) }}">{{ article.title }}</a></li>
            {% endfor %}
        </ul>
    </div>
</div>
